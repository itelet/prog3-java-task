<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.controllers.TaskDetailController"
            style="-fx-background-color: #f4f5f7; -fx-padding: 20;">
    
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Task Details" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" 
                    hbarPolicy="NEVER" 
                    vbarPolicy="AS_NEEDED"
                    style="-fx-background-color: transparent; -fx-background: transparent; -fx-padding: 0;">
            <VBox spacing="15" style="-fx-padding: 10;">
                
                <!-- Title -->
                <VBox spacing="5">
                    <Label text="Title:" style="-fx-font-weight: bold; -fx-text-fill: #666"/>
                    <TextField fx:id="titleField" promptText="Enter task title"/>
                </VBox>

                <!-- Description -->
                <VBox spacing="5">
                    <Label text="Description:" style="-fx-font-weight: bold; -fx-text-fill: #666"/>
                    <TextArea fx:id="descriptionArea" promptText="Enter task description" 
                              wrapText="true" prefRowCount="4"/>
                </VBox>

                <!-- Background Color -->
                <VBox spacing="5">
                    <Label text="Background Color:" style="-fx-font-weight: bold; -fx-text-fill: #666"/>
                    <HBox spacing="10" fx:id="colorButtonsContainer">
                        <!-- Color buttons will be added dynamically -->
                    </HBox>
                </VBox>

                <!-- Labels -->
                <VBox spacing="5">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Labels:" style="-fx-font-weight: bold; -fx-text-fill: #666"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <TextField fx:id="newLabelField" promptText="Add label" prefWidth="150"/>
                        <Button text="Add" onAction="#onAddLabelClicked"/>
                    </HBox>
                    <FlowPane fx:id="labelsContainer" hgap="5" vgap="5" style="-fx-padding: 5;">
                        <!-- Labels will be added dynamically -->
                    </FlowPane>
                </VBox>

                <!-- Creation Date -->
                <VBox spacing="5">
                    <Label text="Created:" style="-fx-font-weight: bold; -fx-text-fill: #666"/>
                    <Label fx:id="creationDateLabel" style="-fx-text-fill: #666;"/>
                </VBox>

                <!-- Comments -->
                <VBox spacing="5">
                    <Label text="Comments:" style="-fx-font-weight: bold; -fx-text-fill: #666"/>
                    <VBox fx:id="commentsContainer" spacing="10" style="-fx-padding: 5;">
                        <!-- Comments will be added dynamically -->
                    </VBox>
                    <HBox spacing="10">
                        <TextArea fx:id="newCommentArea" promptText="Write a comment..." 
                                  wrapText="true" prefRowCount="3" HBox.hgrow="ALWAYS"/>
                        <Button text="Add Comment" onAction="#onAddCommentClicked"/>
                    </HBox>
                </VBox>

                <!-- Save Button -->
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Button fx:id="saveButton" text="Save" onAction="#onSaveClicked" 
                            style="-fx-background-color: #5aac44; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;"/>
                    <Button fx:id="deleteButton" text="Delete" onAction="#onDeleteClicked" 
                            style="-fx-background-color: #eb5a46; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;"/>
                </HBox>

            </VBox>
        </ScrollPane>
    </center>
</BorderPane>

